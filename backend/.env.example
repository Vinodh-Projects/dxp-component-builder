# Copy this file to .env and fill in your actual API keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
REDIS_URL=redis://redis:6379

# Project Organization Settings
PROJECT_CODE_PATH=./project_code
AUTO_ORGANIZE_COMPONENTS=true
BACKUP_EXISTING_COMPONENTS=true

# Default AEM Project Configuration
DEFAULT_APP_ID=myapp
DEFAULT_PACKAGE_NAME=com.mycompany.myapp
# Subfolder for AI-generated components (creates /apps/{app_id}/components/{ai_subfolder}/)
AI_COMPONENTS_SUBFOLDER=myappai

# AEM Deployment Settings
AEM_AUTHOR_URL=http://localhost:4502
AEM_USERNAME=admin
AEM_PASSWORD=admin
MAVEN_PROFILES=adobe-public,autoInstallPackage
SKIP_TESTS=true

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=true
WORKERS=4
